{{ header }}
<div id="account-return" class="container account-container">
	{{ oct_breadcrumbs }}
	<div class="row">
		<div class="col-lg-12">
			<h1 class="rm-page-title">{{ heading_title }}</h1>
		</div>
	</div>
	<div class="content-top-box">{{ content_top }}</div>
	<div id="content" class="row">
		{{ column_left }}
	    {% if column_left and column_right %}
	    {% set class = 'col-lg-6' %}
	    {% elseif column_left or column_right %}
	    {% set class = 'col-lg-9' %}
	    {% else %}
	    {% set class = 'col-lg-12' %}
	    {% endif %}
	    <div class="{{ class }}">
		    <div class="rm-content h-100">
		      {% if returns %}
		      <div class="table-responsive-sm rm-table-box">
		        <table class="table table-hover">
		          <thead class="thead-dark">
		            <tr>
		              <th>{{ column_return_id }}</th>
		              <th>{{ column_status }}</th>
		              <th>{{ column_date_added }}</th>
		              <th>{{ column_order_id }}</th>
		              <th>{{ column_customer }}</th>
		            </tr>
		          </thead>
		          <tbody>
		          {% for return in returns %}
		          <tr>
		            <td><a href="{{ return.href }}">#{{ return.return_id }}</a></td>
		            <td>{{ return.status }}</td>
		            <td>{{ return.date_added }}</td>
		            <td>{{ return.order_id }}</td>
		            <td>{{ return.name }}</td>
		          </tr>
		          {% endfor %}
		            </tbody>
		        </table>
		      </div>
		      <div class="row">
		        <div class="col-sm-6 text-left">{{ pagination }}</div>
		        <div class="col-sm-6 text-right">{{ results }}</div>
		      </div>
		      {% else %}
		      <p>{{ text_empty }}</p>
		      {% endif %}
		      <div class="buttons mt-4">
		        <a href="{{ continue }}" class="rm-btn dark">{{ button_continue }}</a>
		      </div>
		    </div>
	    </div>
	    {{ column_right }}
	</div>
	{{ content_bottom }}
</div>
{{ footer }}
