		      <form action="{{ action }}" method="post" enctype="multipart/form-data" class="form-horizontal">
		        <fieldset class="rm-account-form">
		          <legend class="rm-content-title">{{ text_my_affiliate }}</legend>
		          <div class="form-group">
		            <label class="rm-control-label" for="input-company">{{ entry_company }}</label>
		            <input type="text" name="company" value="{{ company }}" placeholder="{{ entry_company }}" id="input-company" class="form-control" />
		          </div>
		          <div class="form-group">
		            <label class="rm-control-label" for="input-website">{{ entry_website }}</label>
		            <input type="text" name="website" value="{{ website }}" placeholder="{{ entry_website }}" id="input-website" class="form-control" />
		          </div>
		       </fieldset>
		       <fieldset class="rm-account-form">
		          <legend class="rm-content-title">{{ text_payment }}</legend>
		          <div class="form-group">
		            <label class="rm-control-label" for="input-tax">{{ entry_tax }}</label>
		            <input type="text" name="tax" value="{{ tax }}" placeholder="{{ entry_tax }}" id="input-tax" class="form-control" />
		          </div>
		          <div class="form-group">
		            <label class="rm-control-label">{{ entry_payment }}</label>
		            <div class="radio mb-2">
		                <label class="option">
			                {% if payment == 'cheque' %}
			                <input type="radio" name="payment" class="input-radio" value="cheque" checked="checked" />
			                {% else %}
			                <input type="radio" name="payment" class="input-radio" value="cheque" />
			                {% endif %}
			                <span class="radio-box"></span>
			                {{ text_cheque }}
		                </label>
		            </div>
		            <div class="radio mb-2">
		                <label class="option">
			                {% if payment == 'paypal' %}
			                <input type="radio" name="payment" class="input-radio" value="paypal" checked="checked" />
			                {% else %}
			                <input type="radio" name="payment" class="input-radio" value="paypal" />
			                {% endif %}
			                <span class="radio-box"></span>
			                {{ text_paypal }}
		                </label>
		            </div>
		            <div class="radio">
		                <label class="option">
			                {% if payment == 'bank' %}
			                <input type="radio" name="payment" class="input-radio" value="bank" checked="checked" />
			                {% else %}
			                <input type="radio" name="payment" class="input-radio" value="bank" />
			                {% endif %}
			                <span class="radio-box"></span>
			                {{ text_bank }}
		                </label>
		              </div>
		          </div>
		          <div class="form-group payment" id="payment-cheque">
		            <label class="rm-control-label" for="input-cheque">{{ entry_cheque }}</label>
		            {% if error_cheque %}
		            <script>
					rmNotify('warning', '{{ error_cheque }}');
					</script>
		            {% endif %}
		            <input type="text" name="cheque" value="{{ cheque }}" placeholder="{{ entry_cheque }}" id="input-cheque" class="form-control" />
		          </div>
		          <div class="form-group payment" id="payment-paypal">
		            <label class="rm-control-label" for="input-paypal">{{ entry_paypal }}</label>
		            {% if error_paypal %}
		            <script>
					rmNotify('warning', '{{ error_paypal }}');
					</script>
		            {% endif %}
		            <input type="text" name="paypal" value="{{ paypal }}" placeholder="{{ entry_paypal }}" id="input-paypal" class="form-control" />
		          </div>
		          <div class="payment" id="payment-bank">
		            <div class="form-group">
			            <label class="rm-control-label" for="input-bank-name">{{ entry_bank_name }}</label>
			            <input type="text" name="bank_name" value="{{ bank_name }}" placeholder="{{ entry_bank_name }}" id="input-bank-name" class="form-control" />
		            </div>
		            <div class="form-group">
			            <label class="rm-control-label" for="input-bank-branch-number">{{ entry_bank_branch_number }}</label>
			            <input type="text" name="bank_branch_number" value="{{ bank_branch_number }}" placeholder="{{ entry_bank_branch_number }}" id="input-bank-branch-number" class="form-control" />
		            </div>
		            <div class="form-group">
			            <label class="rm-control-label" for="input-bank-swift-code">{{ entry_bank_swift_code }}</label>
			            <input type="text" name="bank_swift_code" value="{{ bank_swift_code }}" placeholder="{{ entry_bank_swift_code }}" id="input-bank-swift-code" class="form-control" />
		            </div>
		            <div class="form-group">
			            <label class="rm-control-label" for="input-bank-account-name">{{ entry_bank_account_name }}</label>
			            {% if error_bank_account_name %}
			            <script>
						rmNotify('warning', '{{ error_bank_account_name }}');
						</script>
			            {% endif %}
			            <input type="text" name="bank_account_name" value="{{ bank_account_name }}" placeholder="{{ entry_bank_account_name }}" id="input-bank-account-name" class="form-control" />
		            </div>
		            <div class="form-group">
			            <label class="rm-control-label" for="input-bank-account-number">{{ entry_bank_account_number }}</label>
			            {% if error_bank_account_number %}
			            <script>
						rmNotify('warning', '{{ error_bank_account_number }}');
						</script>
			            {% endif %}
			            <input type="text" name="bank_account_number" value="{{ bank_account_number }}" placeholder="{{ entry_bank_account_number }}" id="input-bank-account-number" class="form-control" />
		            </div>
		          </div>
