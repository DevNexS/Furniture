{{ header }}
<div id="account-download" class="container account-container">
	{{ oct_breadcrumbs }}
	<div class="row">
		<div class="col-lg-12">
			<h1 class="rm-page-title">{{ heading_title }}</h1>
		</div>
	</div>
	<div class="content-top-box">{{ content_top }}</div>
	<div id="content" class="row">
		{{ column_left }}
	    {% if column_left and column_right %}
	    {% set class = 'col-lg-6' %}
	    {% elseif column_left or column_right %}
	    {% set class = 'col-lg-9' %}
	    {% else %}
	    {% set class = 'col-lg-12' %}
	    {% endif %}
	    <div class="{{ class }}">
		    <div class="rm-content h-100">
		      {% if downloads %}
		      <div class="table-responsive-sm rm-table-box">
		        <table class="table table-hover">
		          <thead class="thead-dark">
		            <tr>
		              <th>{{ column_order_id }}</th>
		              <th>{{ column_name }}</th>
		              <th>{{ column_size }}</th>
		              <th>{{ column_date_added }}</th>
		            </tr>
		          </thead>
		          <tbody>
		          {% for download in downloads %}
		          <tr>
		            <td>{{ download.order_id }}</td>
		            <td>{{ download.name }} <a href="{{ download.href }}" data-toggle="tooltip" title="{{ button_download }}"><i class="fa fa-file-download"></i></a></td>
		            <td>{{ download.size }}</td>
		            <td>{{ download.date_added }}</td>
		          </tr>
		          {% endfor %}
		          </tbody>
		        </table>
		      </div>
		      <div class="row">
		        <div class="col-sm-6 text-left">{{ pagination }}</div>
		        <div class="col-sm-6 text-right">{{ results }}</div>
		      </div>
		      {% else %}
		      <p>{{ text_empty }}</p>
		      {% endif %}
		      <div class="buttons mt-4">
		        <a href="{{ continue }}" class="rm-btn dark"><span class="rm-btn-text">{{ button_continue }}</span></a>
		      </div>
		    </div>
	    </div>
	    {{ column_right }}
	</div>
	{{ content_bottom }}
</div>
{{ footer }}
