{{ header }}
<div id="account-order" class="container account-container">
	{{ oct_breadcrumbs }}
	<div class="row">
		<div class="col-lg-12">
			<h1 class="rm-page-title">{{ heading_title }}</h1>
		</div>
	</div>
	<div class="content-top-box">{{ content_top }}</div>
	<div id="content" class="row">
		{{ column_left }}
	    {% if column_left and column_right %}
	    {% set class = 'col-lg-6' %}
	    {% elseif column_left or column_right %}
	    {% set class = 'col-lg-9' %}
	    {% else %}
	    {% set class = 'col-lg-12' %}
	    {% endif %}
	    <div class="{{ class }}">
		    <div class="rm-content h-100">
		      {% if orders %}
		      <div class="table-responsive-sm rm-table-box">
		        <table class="table table-hover">
		          <thead class="thead-dark">
		            <tr>
		              <th>{{ column_order_id }}</th>
		              <th>{{ column_customer }}</th>
		              <th>{{ column_product }}</th>
		              <th>{{ column_status }}</th>
		              <th>{{ column_total }}</th>
		              <th>{{ column_date_added }}</th>
		            </tr>
		          </thead>
		          <tbody>
		           {% for order in orders %}
		            <tr>
		              <td><a href="{{ order.view }}">#{{ order.order_id }}</a></td>
		              <td>{{ order.name }}</td>
		              <td>{{ order.products }}</td>
		              <td>{{ order.status }}</td>
		              <td>{{ order.total }}</td>
		              <td>{{ order.date_added }}</td>
		            </tr>
		            {% endfor %}
		          </tbody>
		        </table>
		      </div>
		      <div class="row">
		        <div class="col-sm-6 text-left">{{ pagination }}</div>
		        <div class="col-sm-6 text-right">{{ results }}</div>
		      </div>
		      {% else %}
		      <p>{{ text_empty }}</p>
		      {% endif %}
		      <div class="buttons">
		        <a href="{{ continue }}" class="rm-btn dark">{{ button_continue }}</a>
		      </div>
		    </div>
	    </div>
	    {{ column_right }}
	</div>
	{{ content_bottom }}
</div>
{{ footer }}
