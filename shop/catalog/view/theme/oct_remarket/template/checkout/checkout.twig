{{ header }}
<div id="checkout-checkout" class="container">
	{{ oct_breadcrumbs }}
	<div class="row">
		<div class="col-lg-12">
			<h1 class="rm-page-title">{{ heading_title }}</h1>
		</div>
	</div>
	<div class="content-top-box">{{ content_top }}</div>
	{% if error_warning %}
	<script>
	rmNotify('warning', '{{ error_warning }}');
	</script>
	{% endif %}
	<div id="content" class="row no-gutters">
		{{ column_left }}
	    {% if column_left and column_right %}
	    {% set class = 'col-lg-6' %}
	    {% elseif column_left or column_right %}
	    {% set class = 'col-lg-9' %}
	    {% else %}
	    {% set class = 'col-lg-12' %}
	    {% endif %}
	    <div class="{{ class }}">
		    <div class="rm-content rm-account-content h-100">
		      <div class="panel-group" id="accordion">
		        <div class="panel panel-default">
		          <div class="panel-heading">
		            <div class="panel-title rm-content-title">{{ text_checkout_option }}</div>
		          </div>
		          <div class="panel-collapse collapse" id="collapse-checkout-option">
		            <div class="panel-body rm-account-form"></div>
		          </div>
		        </div>
		        {% if not logged and account != 'guest' %}
		        <div class="panel panel-default">
		          <div class="panel-heading">
		            <div class="panel-title rm-content-title">{{ text_checkout_account }}</div>
		          </div>
		          <div class="panel-collapse collapse" id="collapse-payment-address">
		            <div class="panel-body rm-account-form"></div>
		          </div>
		        </div>
		        {% else %}
		        <div class="panel panel-default">
		          <div class="panel-heading">
		            <div class="panel-title rm-content-title">{{ text_checkout_payment_address }}</div>
		          </div>
		          <div class="panel-collapse collapse" id="collapse-payment-address">
		            <div class="panel-body rm-account-form"></div>
		          </div>
		        </div>
		        {% endif %}
		        {% if shipping_required %}
		        <div class="panel panel-default">
		          <div class="panel-heading">
		            <div class="panel-title rm-content-title">{{ text_checkout_shipping_address }}</div>
		          </div>
		          <div class="panel-collapse collapse" id="collapse-shipping-address">
		            <div class="panel-body rm-account-form"></div>
		          </div>
		        </div>
		        <div class="panel panel-default">
		          <div class="panel-heading">
		            <div class="panel-title rm-content-title">{{ text_checkout_shipping_method }}</div>
		          </div>
		          <div class="panel-collapse collapse" id="collapse-shipping-method">
		            <div class="panel-body rm-account-form"></div>
		          </div>
		        </div>
		        {% endif %}
		        <div class="panel panel-default">
		          <div class="panel-heading">
		            <div class="panel-title rm-content-title">{{ text_checkout_payment_method }}</div>
		          </div>
		          <div class="panel-collapse collapse" id="collapse-payment-method">
		            <div class="panel-body rm-account-form"></div>
		          </div>
		        </div>
		        <div class="panel panel-default">
		          <div class="panel-heading">
		            <div class="panel-title rm-content-title">{{ text_checkout_confirm }}</div>
		          </div>
		          <div class="panel-collapse collapse" id="collapse-checkout-confirm">
		            <div class="panel-body rm-account-form"></div>
		          </div>
		        </div>
		      </div>
		    </div>
	    </div>
	    {{ column_right }}
	</div>
	{{ content_bottom }}
</div>
<script>
$(document).on('change', 'input[name=\'account\']', function() {
	if ($('#collapse-payment-address').parent().find('.panel-heading .panel-title > *').is('a')) {
		if (this.value == 'register') {
			$('#collapse-payment-address').parent().find('.panel-heading .panel-title').html('<a href="#collapse-payment-address" data-toggle="collapse" data-parent="#accordion" class="accordion-toggle">{{ text_checkout_account }} <i class="fas fa-chevron-down"></i></a>');
		} else {
			$('#collapse-payment-address').parent().find('.panel-heading .panel-title').html('<a href="#collapse-payment-address" data-toggle="collapse" data-parent="#accordion" class="accordion-toggle">{{ text_checkout_payment_address }} <i class="fas fa-chevron-down"></i></a>');
		}
	} else {
		if (this.value == 'register') {
			$('#collapse-payment-address').parent().find('.panel-heading .panel-title').html('{{ text_checkout_account }}');
		} else {
			$('#collapse-payment-address').parent().find('.panel-heading .panel-title').html('{{ text_checkout_payment_address }}');
		}
	}
});

{% if not logged %}
$(document).ready(function() {
    $.ajax({
        url: 'index.php?route=checkout/login',
        dataType: 'html',
        cache: false,
        success: function(html) {
           $('#collapse-checkout-option .panel-body').html(html);

			$('#collapse-checkout-option').parent().find('.panel-heading .panel-title').html('<a href="#collapse-checkout-option" data-toggle="collapse" data-parent="#accordion" class="accordion-toggle">{{ text_checkout_option }} <i class="fas fa-chevron-down"></i></a>');

