        <span>{{ fixed_bar_wishlist }}</span>
        <span class="rm_mobile_menu-list-item-status{% if wishlist_total %} has-child{% endif %}"></span>
    </a>
    <a id="rm_mobile_compare" href="{{ compare_link }}" class="rm_mobile_menu-list-item d-flex align-items-center rm_mobile_menu_first-item">
