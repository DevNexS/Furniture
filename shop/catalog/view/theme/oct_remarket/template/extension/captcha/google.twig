<script src="//www.google.com/recaptcha/api.js"></script>
<fieldset>
  <legend class="rm-content-title mb-0">{{ text_captcha }}</legend>
  <div class="form-group required">
  	{% if route|slice(0, 9) == 'checkout/' %}
    <label class="rm-control-label captcha-control-label" for="input-payment-captcha">{{ entry_captcha }}</label>
    <div id="input-payment-captcha" class="g-recaptcha" data-sitekey="{{ site_key }}"></div>
    {% else %}
    <label class="rm-control-label captcha-control-label">{{ entry_captcha }}</label>
    <div class="g-recaptcha" data-sitekey="{{ site_key }}"></div>
    {% endif %}
	{% if error_captcha %}
	<script>
	rmNotify('danger', '{{ error_captcha }}');
	</script>
	{% endif %}
  </div>
</fieldset>
