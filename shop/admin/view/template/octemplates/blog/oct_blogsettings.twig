{{ header }}{{ column_left }}
<div id="content">
	<div class="page-header">
		<div class="container-fluid">
			<div class="pull-right">
				<button type="submit" form="form" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
				<a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
			</div>
			<h1>{{ heading_title }}</h1>
			<ul class="breadcrumb">
				{% for breadcrumb in breadcrumbs %}
				<li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
				{% endfor %}
			</ul>
		</div>
	</div>
	<div class="container-fluid">
		{% if error_warning %}
		<script>
			usNotify('warning', '{{ error_warning }}');
		</script>
		{% endif %}
		{% if success %}
		<script>
			usNotify('success', '{{ success }}');
		</script>
		{% endif %}
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
			</div>
			<div class="panel-body">
				<form action="{{ action }}" method="post" enctype="multipart/form-data" id="form" class="form-horizontal">
					<ul class="nav nav-tabs">
						<li class="active"><a href="#tab-general" data-toggle="tab">{{ tab_general }}</a></li>
						<li><a href="#tab-image" data-toggle="tab">{{ tab_image }}</a></li>
					</ul>
					<div class="tab-content">
						<div class="tab-pane active" id="tab-general">
							<div class="form-group">
								<div class="col-sm-6">
									<label class="col-sm-4 control-label" for="input-status">{{ entry_status }}</label>
									<div class="col-sm-8">
										<div class="toggle-group">
											<input type="checkbox" name="oct_blogsettings_status" {% if oct_blogsettings_status %}checked="checked"{% endif %} id="input-status" tabindex="1">
											<label for="input-status"></label>
											<div class="onoffswitch pull-left" aria-hidden="true">
												<div class="onoffswitch-label">
													<div class="onoffswitch-inner"></div>
													<div class="onoffswitch-switch"></div>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
							<div class="form-group">
								<div class="col-sm-6">
									<label class="col-sm-4 control-label" for="input-comments">{{ entry_comments }}</label>
									<div class="col-sm-8">
										<div class="toggle-group">
											<input type="checkbox" name="oct_blogsettings_data[comments]" {% if oct_blogsettings_data.comments %}checked="checked"{% endif %} id="input-comments" tabindex="1">
											<label for="input-comments"></label>
											<div class="onoffswitch pull-left" aria-hidden="true">
												<div class="onoffswitch-label">
													<div class="onoffswitch-inner"></div>
													<div class="onoffswitch-switch"></div>
												</div>
											</div>
										</div>
									</div>
								</div>
								<div class="col-sm-6">
									<label class="col-sm-4 control-label" for="input-comments_moder">{{ entry_comments_moder }}</label>
									<div class="col-sm-8">
										<div class="toggle-group">
											<input type="checkbox" name="oct_blogsettings_data[comments_moder]" {% if oct_blogsettings_data.comments_moder %}checked="checked"{% endif %} id="input-comments_moder" tabindex="1">
											<label for="input-comments_moder"></label>
											<div class="onoffswitch pull-left" aria-hidden="true">
												<div class="onoffswitch-label">
													<div class="onoffswitch-inner"></div>
													<div class="onoffswitch-switch"></div>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
							<div class="form-group">
								<div class="col-sm-6">
									<label class="col-sm-4 control-label" for="input-count_articles">{{ entry_count_articles }}</label>
									<div class="col-sm-8">
										<div class="toggle-group">
											<input type="checkbox" name="oct_blogsettings_count_articles" {% if oct_blogsettings_count_articles %}checked="checked"{% endif %} id="input-count_articles" tabindex="1">
											<label for="input-count_articles"></label>
											<div class="onoffswitch pull-left" aria-hidden="true">
												<div class="onoffswitch-label">
													<div class="onoffswitch-inner"></div>
													<div class="onoffswitch-switch"></div>
												</div>
											</div>
										</div>
									</div>
								</div>
								<div class="col-sm-6">
									<label class="col-sm-4 control-label" for="input-search">{{ entry_search }}</label>
									<div class="col-sm-8">
										<div class="toggle-group">
											<input type="checkbox" name="oct_blogsettings_search" {% if oct_blogsettings_search %}checked="checked"{% endif %} id="input-search" tabindex="1">
											<label for="input-search"></label>
											<div class="onoffswitch pull-left" aria-hidden="true">
												<div class="onoffswitch-label">
													<div class="onoffswitch-inner"></div>
													<div class="onoffswitch-switch"></div>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
						<div class="tab-pane" id="tab-image">
							<div class="form-group">
								<div class="col-sm-6">
									<label class="col-sm-4 control-label" for="input-article_limit">{{ entry_article_limit }}</label>
									<div class="col-sm-8">
										<input type="text" name="oct_blogsettings_data[limit]" value="{{ oct_blogsettings_data.limit ? oct_blogsettings_data.limit : '24' }}" placeholder="{{ entry_article_limit }}" id="input-article_limit" class="form-control" />
									</div>
								</div>
								<div class="col-sm-6">
									<label class="col-sm-4 control-label" for="input-description_length">{{ entry_description_length }}</label>
									<div class="col-sm-8">
										<input type="text" name="oct_blogsettings_data[description_length]" value="{{ oct_blogsettings_data.description_length ? oct_blogsettings_data.description_length : '255' }}" placeholder="{{ entry_description_length }}" id="input-description_length" class="form-control" />
									</div>
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-2 control-label" for="input-show_main_image">{{ entry_show_main_image }}</label>
								<div class="col-sm-10">
									<div class="toggle-group">
										<input type="checkbox" name="oct_blogsettings_data[show_main_image]" {% if oct_blogsettings_data.show_main_image %}checked="checked"{% endif %} id="input-show_main_image" tabindex="1">
										<label for="input-show_main_image"></label>
										<div class="onoffswitch pull-left" aria-hidden="true">
											<div class="onoffswitch-label">
												<div class="onoffswitch-inner"></div>
												<div class="onoffswitch-switch"></div>
											</div>
										</div>
									</div>
								</div>
							</div>
							<fieldset>
								<legend>{{ entry_images }}</legend>
								<div class="form-group">
									<label class="col-sm-2 control-label" for="input-image-article-width">{{ entry_width_articles }}</label>
									<div class="col-sm-10">
										<div class="row">
											<div class="col-sm-6">
												<div class="input-group">
													<input type="text" name="oct_blogsettings_data[articles_width]" value="{{ oct_blogsettings_data.articles_width }}" placeholder="{{ entry_width }}" id="input-image-article-width" class="form-control" />
													<span class="input-group-addon">px</span>
												</div>
											</div>
											<div class="col-sm-6">
												<div class="input-group">
													<input type="text" name="oct_blogsettings_data[articles_height]" value="{{ oct_blogsettings_data.articles_height }}" placeholder="{{ entry_height }}" class="form-control" />
													<span class="input-group-addon">px</span>
												</div>
											</div>
										</div>
									</div>
								</div>
								<div class="form-group">
									<label class="col-sm-2 control-label" for="input-image-article-post-width">{{ entry_width_article }}</label>
									<div class="col-sm-10">
										<div class="row">
											<div class="col-sm-6">
												<div class="input-group">
													<input type="text" name="oct_blogsettings_data[article_width]" value="{{ oct_blogsettings_data.article_width }}" placeholder="{{ entry_width }}" id="input-image-article-width" class="form-control" />
													<span class="input-group-addon">px</span>
												</div>
											</div>
											<div class="col-sm-6">
												<div class="input-group">
													<input type="text" name="oct_blogsettings_data[article_height]" value="{{ oct_blogsettings_data.article_height }}" placeholder="{{ entry_height }}" class="form-control" />
													<span class="input-group-addon">px</span>
												</div>
											</div>
										</div>
									</div>
								</div>
								<div class="form-group">
									<label class="col-sm-2 control-label" for="input-image-article-dop-width">{{ entry_width_article_dop }}</label>
									<div class="col-sm-10">
										<div class="row">
											<div class="col-sm-6">
												<div class="input-group">
													<input type="text" name="oct_blogsettings_data[article_dop_width]" value="{{ oct_blogsettings_data.article_dop_width }}" placeholder="{{ entry_width }}" id="input-image-article-width" class="form-control" />
													<span class="input-group-addon">px</span>
												</div>
											</div>
											<div class="col-sm-6">
												<div class="input-group">
													<input type="text" name="oct_blogsettings_data[article_dop_height]" value="{{ oct_blogsettings_data.article_dop_height }}" placeholder="{{ entry_height }}" class="form-control" />
													<span class="input-group-addon">px</span>
												</div>
											</div>
										</div>
									</div>
								</div>
								<div class="form-group">
									<label class="col-sm-2 control-label" for="input-image-article-dop-width">{{ entry_article_dop_width }}</label>
									<div class="col-sm-10">
										<div class="row">
											<div class="col-sm-6">
												<div class="input-group">
													<input type="text" name="oct_blogsettings_data[dop_article_width]" value="{{ oct_blogsettings_data.dop_article_width }}" placeholder="{{ entry_width }}" id="input-image-article-width" class="form-control" />
													<span class="input-group-addon">px</span>
												</div>
											</div>
											<div class="col-sm-6">
												<div class="input-group">
													<input type="text" name="oct_blogsettings_data[dop_article_height]" value="{{ oct_blogsettings_data.dop_article_height }}" placeholder="{{ entry_height }}" class="form-control" />
													<span class="input-group-addon">px</span>
												</div>
											</div>
										</div>
									</div>
								</div>
								<div class="form-group">
									<label class="col-sm-2 control-label" for="input-image-article-dop-width">{{ entry_product_width }}</label>
									<div class="col-sm-10">
										<div class="row">
											<div class="col-sm-6">
												<div class="input-group">
													<input type="text" name="oct_blogsettings_data[product_width]" value="{{ oct_blogsettings_data.product_width }}" placeholder="{{ entry_width }}" id="input-image-article-width" class="form-control" />
													<span class="input-group-addon">px</span>
												</div>
											</div>
											<div class="col-sm-6">
												<div class="input-group">
													<input type="text" name="oct_blogsettings_data[product_height]" value="{{ oct_blogsettings_data.product_height }}" placeholder="{{ entry_height }}" class="form-control" />
													<span class="input-group-addon">px</span>
												</div>
											</div>
										</div>
									</div>
								</div>
							</fieldset>

						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
<script>
	$('#language a:first').tab('show');
</script>
{{ footer }}