<div class="form-group">
    <label class="col-sm-2 control-label" for="megamenu-{{ menu_id }}-status">{{ entry_status }}</label>
    <div class="col-sm-10">
        <div class="toggle-group">
            <input type="checkbox" name="oct_megamenu[{{ menu_id }}][status]" {% if oct_menu.status is defined and oct_menu.status %}checked="checked"{% endif %} id="megamenu-{{ menu_id }}-status" tabindex="1">
            <label for="megamenu-{{ menu_id }}-status"></label>
            <div class="onoffswitch pull-left" aria-hidden="true">
                <div class="onoffswitch-label">
                    <div class="onoffswitch-inner"></div>
                    <div class="onoffswitch-switch"></div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="form-group">
	<label class="col-sm-2 control-label">{{ entry_menu_image }}</label>
	<div class="col-sm-10">
        <a href="" id="thumb-menuimage{{ menu_id }}" data-toggle="image" class="img-thumbnail">
            <img src="{{ thumb }}" style="min-width:50px;min-height:50px;" alt="" title="" data-placeholder="{{ placeholder }}" />
        </a>
		<input type="hidden" name="oct_megamenu[{{ menu_id }}][settings][image]" value="{{ oct_menu.settings.image }}" id="input-menuimage{{ menu_id }}" />
	</div>
</div>
{% if elements is defined %}
<div class="form-group">
	<label class="col-sm-2 control-label">{{ text_menu_category }}</label>
	<div class="col-sm-10">
		<div class="well well-sm" style="min-height: 150px;max-height:300px;overflow: auto;">
			<table class="table table-striped">
				{% for category in elements %}
				<tr>
					<td class="checkbox">
						<label>
						{% if category.category_id in oct_menu.settings.id %}
						<input type="checkbox" name="oct_megamenu[{{ menu_id }}][settings][id][]" value="{{ category.category_id }}" checked="checked" />
						{{ category['name'] }}
						{% else %}
						<input type="checkbox" name="oct_megamenu[{{ menu_id }}][settings][id][]" value="{{ category.category_id }}" />
						{{ category['name'] }}
						{% endif %}
						</label>
					</td>
				</tr>
				{% endfor %}
			</table>
		</div>
		<a onclick="$(this).parent().find(':checkbox').prop('checked', true);">{{ text_select_all }}</a> / <a onclick="$(this).parent().find(':checkbox').prop('checked', false);">{{ text_unselect_all }}</a>
	</div>
</div>
{% endif %}
