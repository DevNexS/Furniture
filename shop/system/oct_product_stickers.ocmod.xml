							<label>
							<input type="checkbox" name="oct_stickers[{{ key }}]" value="{{ key }}" {% if key in oct_stickers|keys %}checked="checked"{% endif %} /> {{ product_oct_sticker }}
							</label>
						</div>
						{% endfor %}
					</div>
				</div>
			</div>
			{% endif %}
			]]></add>
    	</operation>
